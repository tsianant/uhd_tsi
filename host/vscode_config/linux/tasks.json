{
    "tasks": [
        {
            "label": "Linux CMake: Build All (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "-j", "$(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build entire project in debug mode",
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake: Configure Debug"
        },
        {
            "label": "Linux CMake: Build All (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Release",
                "-j", "$(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Build entire project in release mode",
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake: Configure Release"
        },
        {
            "label": "Linux CMake: Build RFNOC Stream Tool",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "sdr_capture",
                "-j", "$(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Build only the RFNOC Stream Tool application",
            "problemMatcher": ["$gcc"]
        }
    ],
    "version": "2.0.0"
}